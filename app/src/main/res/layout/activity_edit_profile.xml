<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_all"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <com.acrobat.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_profile"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <com.acrobat.widgets.CustomRoundedImageView
            android:id="@+id/ivUserPic_SideMenu"
            android:layout_width="@dimen/profile_pic_hw"
            android:layout_height="@dimen/profile_pic_hw"
            android:layout_marginTop="10dp"
            android:src="@drawable/demo_user_image"
            app:border_width="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <com.acrobat.widgets.CustomTextView
                android:id="@+id/tvChangePicture_EditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_picture"
                android:textColor="@color/white" />

            <com.acrobat.widgets.CustomTextView
                android:id="@+id/tvRemovePicture_EditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/remove_picture"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.acrobat.widgets.CustomCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <com.acrobat.widgets.CustomEditText
                    android:id="@+id/etUsername_EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/user_icon"
                    android:drawablePadding="17dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_username"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.acrobat.widgets.CustomCardView>

            <com.acrobat.widgets.CustomCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <com.acrobat.widgets.CustomEditText
                    android:id="@+id/etFirstname_EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/hand_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_firstname"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.acrobat.widgets.CustomCardView>

            <com.acrobat.widgets.CustomCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <com.acrobat.widgets.CustomEditText
                    android:id="@+id/etLastname_EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/hand_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_lastname"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.acrobat.widgets.CustomCardView>

            <com.acrobat.widgets.CustomCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <com.acrobat.widgets.CustomEditText
                    android:id="@+id/etEmail_EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/email_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.acrobat.widgets.CustomCardView>

            <com.acrobat.widgets.CustomCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <com.acrobat.widgets.CustomEditText
                    android:id="@+id/etStreetname_EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/street_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_streetname"
                    android:inputType="text"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.acrobat.widgets.CustomCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.acrobat.widgets.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="1dp"
                    card_view:cardUseCompatPadding="true">

                    <com.acrobat.widgets.CustomEditText
                        android:id="@+id/etCity_EditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_city"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </com.acrobat.widgets.CustomCardView>

                <com.acrobat.widgets.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="1dp"
                    card_view:cardUseCompatPadding="true">

                    <com.acrobat.widgets.CustomEditText
                        android:id="@+id/etState_EditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_state"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </com.acrobat.widgets.CustomCardView>

                <com.acrobat.widgets.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="1dp"
                    card_view:cardUseCompatPadding="true">

                    <com.acrobat.widgets.CustomEditText
                        android:id="@+id/etZipCode_EditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_zip_code"
                        android:inputType="number"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </com.acrobat.widgets.CustomCardView>
            </LinearLayout>

            <com.acrobat.widgets.CustomCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <com.acrobat.widgets.CustomEditText
                    android:id="@+id/etContact_EditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_contact"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.acrobat.widgets.CustomCardView>

            <com.acrobat.widgets.CustomTextView
                android:id="@+id/tvSave_EditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>