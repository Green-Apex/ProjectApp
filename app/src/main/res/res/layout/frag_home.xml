<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res/com.acrobat.mightyhomeplanz"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout android:id="@+id/tabs"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/white" app:tabGravity="fill"
        app:tabIndicatorColor="@color/purple" app:tabMode="fixed"
        app:tabSelectedTextColor="@color/black" app:tabTextColor="@color/bg_color_all"
        app1:tabIndicatorHeight="5px"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>